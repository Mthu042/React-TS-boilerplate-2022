{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "ESNext",
        "module": "umd",
        "lib": ["ESNext", "dom"],
        "jsx": "react",
        "noEmit": true,
        "sourceMap": true /* Strict Type-Checking Options */,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "paths": {
            "~/*": ["*"]
        },
        /* Module Resolution Options */
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}
